<section class="ui raised segment">
  <div class="ui grid">
    <aside class="six wide column">
      <img src="images/google.jpg" class="ui medium image">
    </aside>
    <article class="eight wide column">
      <table class="ui celled table segment">
        <thead>
          <tr>
            <th>Name</th>
            <th>Details</th>
            <th>Member</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          {{#each points}}
            <tr>
              <td> {{name}} </td>
              <td> {{details}} </td>
              <td> {{firstName}} {{lastName}}</td>
              <td> <a href="/poi/deletePOI{{_id}}"> <i class="trash red alternate outline icon"></i> </a> </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </article>
  </div>
</section>